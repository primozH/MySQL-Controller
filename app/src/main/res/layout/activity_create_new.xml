<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="optimus_primus.si.mysqlcontroler.CreateNewActivity">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tableRow">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Ime"
            android:id="@+id/textView"
            android:layout_column="0"
            android:layout_weight="1"
            android:gravity="center_vertical"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/ime"
            android:layout_column="1"
            android:layout_weight="1"
            />
    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableRow"
        android:layout_alignLeft="@+id/tableRow"
        android:layout_alignStart="@+id/tableRow"
        android:id="@+id/tableRow2">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Priimek"
            android:id="@+id/textView1"
            android:layout_column="0"
            android:layout_weight="1"
            android:gravity="center_vertical"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/priimek"
            android:layout_column="1"
            android:layout_weight="1" />
    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableRow2"
        android:layout_alignLeft="@+id/tableRow2"
        android:layout_alignStart="@+id/tableRow2"
        android:id="@+id/tableRow3">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Naslov"
            android:id="@+id/textView2"
            android:layout_column="0"
            android:layout_weight="1"
            android:gravity="center_vertical"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/naslov"
            android:layout_column="1"
            android:layout_weight="1"
            />
    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tableRow4"
        android:layout_below="@+id/tableRow3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Hišna številka"
            android:id="@+id/textView4"
            android:layout_column="0"
            android:layout_weight="1"
            android:gravity="center_vertical"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/hisna_st"
            android:layout_column="1"
            android:layout_weight="1"
            />
    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tableRow5"
        android:layout_below="@+id/tableRow4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Email"
            android:id="@+id/textView3"
            android:layout_column="0"
            android:layout_weight="1"
            android:gravity="center_vertical"/>


        <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/e_mail"
            android:layout_column="1"
            android:layout_weight="1"
            />
    </TableRow>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ustvari"
        android:id="@+id/create_btn"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
